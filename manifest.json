{
    "name": "extention",
    "version": "0.1.1",
    "description": "A maybe useful extention that has been developed by FaultyDev. Still being developed by me so expect some buggy or inefficient code.",
    "permissions": ["storage", "downloads"],
    "browser_action": {
        
        "default_popup": "index.html",
        "default_title": "A maybe useful extention.",

        "page_action": {

            "default_icon": {
                "16": "images/get_started16.png",
                "32": "images/get_started32.png",
                "48": "images/get_started48.png",
                "128": "images/get_started128.png"
}

        
        
    },

        "background": {
            "scripts": ["background.js"],
            "persistent": false
        } 
    },

    "icons": {
                "16": "images/get_started16.png",
                "32": "images/get_started32.png",
                "48": "images/get_started48.png",
                "128": "images/get_started128.png"
            },

    "manifest_version": 2
    
}
